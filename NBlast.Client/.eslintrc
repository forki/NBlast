{
	"env": {
		"browser" : true,
		"mocha"   : true,
		"amd"     : true
	},

	"rules": {
		"eqeqeq"                    : 2,
		"no-console"                : 1,
		"vars-on-top"               : 2,
		"global-strict"             : 0,
		"strict"                    : [2, "global"],
		"no-inner-declarations"     : 2,
		"no-unreachable"            : 2,
		"no-fallthrough"            : 2,
		"complexity"                : [2, 2],
		"max-params"                : [2, 3],
		"max-nested-callbacks"      : [2, 2],
		"max-statements"            : [1, 10],
		"no-bitwise"                : 2,
		"no-irregular-whitespace"   : 0,
		"no-multi-spaces"           : 0,
		"quotes"                    : [1, "single", "avoid-escape"],
		"brace-style"               : [2, "1tbs", { "allowSingleLine": false }],
		"camelcase"                 : [2, {"properties": "always"}],
		"comma-spacing"             : [1, {"before": false, "after": true}],
		"comma-style"               : [1, "last"],
		"key-spacing"               : [2, { "align": "colon", "beforeColon": true, "afterColon": true }],
		"consistent-this"           : 2,
		"no-continue"               : 2,
		"no-inline-comments"        : 2,
		"no-lonely-if"              : 2,
		"no-trailing-spaces"        : 1,
		"no-mixed-spaces-and-tabs"  : 2,
		"no-nested-ternary"         : 2,
		"no-underscore-dangle"      : 2,
		"space-after-function-name" : 2,
		"space-infix-ops"           : 2,
		"dot-location"              : [2, "property"],
		"space-before-blocks"       : [2, "always"],
		"operator-assignment"       : [1, "never"],
		"operator-linebreak"        : [2, "after"],
		"semi-spacing"              : [2, {"before": false, "after": true}],
		"no-new-object"             : 2,
		"indent"                    : [2, 4],
		"new-cap"                   : 1,
		"no-plusplus"               : 2
	},

	"globals": {
		"NBlast"   : false,
		"module"   : false,
		"require"  : false,
		"sinon"    : false,
		"it"       : false,
		"describe" : false
	}

}