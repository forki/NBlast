<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>
  <appSettings>
	<!--    
  	<add key="NBlast.directoryPath" value=""/>
    <add key="NBlast.directoryPath" value="%APPDATA%/NBlast/index"/>
    -->
    <add key="NBlast.search.hits_per_page" value="15"/>
    <add key="NBlast.index.directory_path" value="index"/>
    <add key="NBlast.index.documents_per_task" value="1000"/>
  </appSettings>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <nlog throwExceptions="true">
    <variable name="topLevelLayout" value="[${date:format=HH\:mm\:ss}]|(${level:uppercase=true})|${logger:shortName=true}: ${message}${onexception: ${newline}----EXCEPTION DETAILS-----${newline}${exception:format=tostring}}" />
    <targets>
      <target name="coloredTopLevel" type="ColoredConsole" layout="${topLevelLayout}">
        <highlight-word foregroundColor="DarkYellow" ignoreCase="true" regex="\[[^\]]+\]" wholeWords="true"/>
        <highlight-word foregroundColor="DarkCyan" ignoreCase="true" regex="(?&lt;=\)\|)[^:]+(?=:)" wholeWords="true"/>
      </target>
<!--        <target name="ws" type="WebService" protocol="HttpPost" url="http://localhost:8080/api/log/receive">-->
<!--            <parameter name="message" type="System.String" layout="${message}"/>-->
<!--            <parameter name="logger" type="System.String" layout="${logger}"/>-->
<!--            <parameter name="level" type="System.String" layout="${level}"/>-->
<!--        </target>-->
    </targets>
    <rules>
      <logger name="*" minLevel="Trace" writeTo="coloredTopLevel" />
<!--      <logger name="*" minLevel="Trace" appendTo="ws" />-->
    </rules>
  </nlog>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="FSharp.Core" publicKeyToken="b03f5f7f11d50a3a" culture="neutral" />
        <bindingRedirect oldVersion="2.0.0.0" newVersion="4.3.0.0" />
        <bindingRedirect oldVersion="2.3.5.0" newVersion="4.3.0.0" />
        <bindingRedirect oldVersion="4.0.0.0" newVersion="4.3.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>